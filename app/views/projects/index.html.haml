- content_for :title do
  Projects
  = "(#{@projects.length})"

.col-md-12.text-left
  .top-new-projects
    %h3 All projects
    %hr
    - @projects.each do |p|
      .media.projects
        = link_to project_path(p) do
          .img-wrapper
            = image_tag p.avatar.url(:thumb), class: "media-object"
        .media-body
          = link_to project_path(p) do
            %h5.media-heading
              = p.title
          .social-objects-group
            %i.fa.fa-group
            = pluralize(p.memberships.count, 'dev')
          .social-objects-group
            %i.fa.fa-thumbs-up
            = p.likes.count

